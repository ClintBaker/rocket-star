<div class="well" align="center">
  <h2 class><%= @product.name %></h2>
  <strong>Price: $<%= @product.price %></strong>
  <p><%= @product.description %></p>
  <br />
  <small>Supplied by:</small>
  <h4 class="logo-brand"><%= link_to @product.company.name, @product.company %></h4>
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
  <%= link_to "Delete", product_path(@product), method: :delete, confirm: "Are you sure?", class: "btn btn-danger" %>
</div>

<div align="center">[ <%= link_to "Back to products", products_path %> ]</div>