<% provide(:title, "Edit product") %>
<% provide(:button_text, "Update") %>
<div class="row well">
  <h1 align="center">Edit products</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>

      <%= render 'products/error_messages' %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: "10" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control" %>
      </div>

      <%= f.submit yield(:button_text), class: "btn btn-primary form-control" %>

    <% end %>
  </div>
</div>

<div align="center">[ <%= link_to "Cancel", products_path %> ]</div>